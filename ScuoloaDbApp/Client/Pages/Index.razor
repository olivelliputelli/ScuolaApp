@page "/"
@using ScuoloaDbApp.Shared
@inject HttpClient Http

<p>
  Numero studenti: @studenti?.Count()
</p>
<div class="alert alert-secondary" role="alert">
    Numero classi: @classi?.Count()
</div>

@code{
    private Classe[]? classi;
    private Studente[]? studenti;

    protected override async Task OnInitializedAsync()
    {
        classi = await Http.GetFromJsonAsync<Classe[]>("api/classi");
        studenti = await Http.GetFromJsonAsync<Studente[]>("api/studenti");
    }
}